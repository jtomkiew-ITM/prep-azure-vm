{
    "$schema": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/schemas/2016-11-28/dtlArtifacts.json",
    "title": "Add MSBuild from BuildTools to Path",
    "description": "For MS BuildTools 2017",
    "tags": [
        "Windows",
        "MSBuild",
        "BuildTools"
    ],
    "iconUri": "https://github.com/jtomkiew-ITM/prep-azure-vm/raw/master/Icons/greenshell.png",
    "targetOsType": "Windows",
    "parameters": {
        "pathToAdd": {
            "type": "string",
            "displayName": "path to add",
            "allowEmpty": true
        }
    },
    "runCommand": {
        "commandToExecute": "[concat('powershell.exe -ExecutionPolicy bypass \"& ./Add-ToPath.ps1', ' -pathToAdd ', parameters('pathToAdd'), '\"')]"
    }
}